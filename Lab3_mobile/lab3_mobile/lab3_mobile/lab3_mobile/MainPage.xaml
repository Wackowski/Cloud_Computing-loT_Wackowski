<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="lab3_mobile.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="24" CornerRadius="0">
            <Label Text="People App" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="60"/>
            </Grid.RowDefinitions>
            <Image x:Name="imgPhoto" Grid.Row="0"/>
            <StackLayout Grid.Row="1">
                <Button x:Name="binPhoto" Text="Take a picture" />
                <Entry x:Name="tbxFirstName" Placeholder="First Name"/>
                <Entry x:Name="tbxSecondName" Placeholder="Second Name"/>
                <Entry x:Name="tbxPhone" Placeholder=" Phone Number" Keyboard="Telephone"/>
            </StackLayout>
        </Grid>
    </StackLayout>

</ContentPage>
